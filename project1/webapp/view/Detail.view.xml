<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="project1.controller.Detail"
    displayBlock="true"
>
    <Page
        id="page"
        title="Detail Page"
    >
        <content>
            <ObjectHeader
                id="_IDGenObjectHeader1"
                icon="/images/3.jpg"
                iconDensityAware="false"
                iconAlt="Denise Smith"
                imageShape="Circle"
                responsive="true"
                title="{myModel>orderId}"
                number="{myModel>GrossAmount}"
                numberUnit="EUR"
                class="sapUiResponsivePadding--header"
            >
                <statuses>
                    <ObjectStatus
                        id="_IDGenObjectStatus1"
                        text="Some Damaged"
                        state="Error"
                    />
                    <ObjectStatus
                        id="_IDGenObjectStatus2"
                        text="In Stock"
                        state="Success"
                    />
                </statuses>

                <ObjectAttribute
                    id="_IDGenObjectAttribute2"
                    text="{myModel>orderName}"
                />
                <ObjectAttribute
                    id="_IDGenObjectAttribute4"
                    text="{myModel>BuyerName}"
                />
            </ObjectHeader>

            <Table
                id="_IDGenTable1"
                headerText="Product List"
                items="{myModel>products}"
            >
                <headerToolbar>
                    <OverflowToolbar id="otbSubheader">
                        <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                        <SearchField
                            ariaLabelledBy="text1"
                            id="maxPrice"
                            liveChange="onFilter"
                        >
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    id="_IDGenOverflowToolbarLayoutData1"
                                    maxWidth="300px"
                                    shrinkable="true"
                                    priority="NeverOverflow"
                                />
                            </layoutData>
                        </SearchField>
                        <Button
                            id="_IDGenButton1"
                            text="Reset"
                            type="Transparent"
                            press="onReset"
                        />
                        <OverflowToolbarButton
                            id="_IDGenOverflowToolbarButton1"
                            tooltip="Sort"
                            type="Transparent"
                            text="Sort"
                            icon="sap-icon://sort"
                            press="onSort"
                        />
                        <OverflowToolbarButton
                            id="_IDGenOverflowToolbarButton2"
                            tooltip="Group"
                            type="Transparent"
                            text="Group"
                            icon="sap-icon://group-2"
                            press="onGroup"
                        />
                        <OverflowToolbarMenuButton
                            id="_IDGenOverflowToolbarMenuButton1"
                            tooltip="Export"
                            type="Transparent"
                            text="Export"
                            buttonMode="Split"
                            icon="sap-icon://share"
                            defaultAction="onDefaultActionAccept"
                            beforeMenuOpen="onBeforeMenuOpen"
                            useDefaultActionOnly="true"
                        >
                            <menu>
                                <Menu
                                    id="_IDGenMenu1"
                                    itemSelected="onMenuAction"
                                >
                                    <MenuItem
                                        id="_IDGenMenuItem1"
                                        text="Export as PDF"
                                        icon="sap-icon://pdf-attachment"
                                    />
                                    <MenuItem
                                        id="_IDGenMenuItem2"
                                        text="Export to Excel"
                                        icon="sap-icon://excel-attachment"
                                    />
                                </Menu>
                            </menu>
                        </OverflowToolbarMenuButton>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        id="_IDGenColumn1"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Center"
                    >
                        <header>
                            <Label
                                id="_IDGenLabel1"
                                text="Product ID"
                            />
                        </header>
                    </Column>
                    <Column
                        id="_IDGenColumn2"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Center"
                    >
                        <header>
                            <Label
                                id="_IDGenLabel2"
                                text="Product Name"
                            />
                        </header>
                    </Column>
                    <Column
                        id="_IDGenColumn3"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Center"
                    >
                        <header>
                            <Label
                                id="_IDGenLabel3"
                                text="Product Quantity"
                            />
                        </header>
                    </Column>
                    <Column
                        id="_IDGenColumn4"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Center"
                    >
                        <header>
                            <Label
                                id="_IDGenLabel4"
                                text="Product Price"
                            />
                        </header>
                    </Column>
                </columns>
                <ColumnListItem
                    id="_IDGenColumnListItem1"
                    type="Navigation"
                    press="onSelectionChange"
                >
                    <cells>
                        <ObjectIdentifier
                            id="_IDGenObjectIdentifier1"
                            title="{myModel>productId}"
                        />
                        <Text
                            id="_IDGenText1"
                            text="{
										path:'myModel>productName'
									}"
                        />
                        <Text
                            id="_IDGenText2"
                            text="{
										path:'myModel>productQuantity'
									}"
                        />
                        <ObjectNumber
                            id="_IDGenObjectNumber1"
                            number="{myModel>productPrice}"
                            unit="EUR"
                        />
                    </cells>
                </ColumnListItem>
            </Table>
        </content>
        <footer>
            <OverflowToolbar id="otbFooter">
                <ToolbarSpacer id="_IDGenToolbarSpacer2" />
                <Button
                    id="_IDGenButton2"
                    type="Accept"
                    text="Accept"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="_IDGenOverflowToolbarLayoutData2"
                            priority="NeverOverflow"
                        />
                    </layoutData>
                </Button>
                <Button
                    id="_IDGenButton3"
                    type="Reject"
                    text="Reject"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="_IDGenOverflowToolbarLayoutData3"
                            priority="NeverOverflow"
                        />
                    </layoutData>
                </Button>
                <OverflowToolbarButton
                    id="_IDGenOverflowToolbarButton3"
                    tooltip="Delete"
                    text="Delete"
                    icon="sap-icon://delete"
                />
                <OverflowToolbarButton
                    id="_IDGenOverflowToolbarButton4"
                    tooltip="Edit"
                    text="Edit"
                    icon="sap-icon://edit"
                />
                <OverflowToolbarButton
                    id="_IDGenOverflowToolbarButton5"
                    tooltip="Add"
                    text="Add"
                    icon="sap-icon://add"
                />
                <OverflowToolbarButton
                    id="_IDGenOverflowToolbarButton6"
                    tooltip="Favorite"
                    text="Favorite"
                    icon="sap-icon://favorite"
                />
                <OverflowToolbarButton
                    id="_IDGenOverflowToolbarButton7"
                    tooltip="Flag"
                    text="Flag"
                    icon="sap-icon://flag"
                />
                <OverflowToolbarToggleButton
                    id="_IDGenOverflowToolbarToggleButton1"
                    tooltip="Toggle"
                    text="Toggle"
                    icon="sap-icon://touch"
                    press="onTogglePress"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>

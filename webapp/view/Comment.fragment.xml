<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc">
    <Dialog title="Contact Me">

        <l:VerticalLayout class="sapUiContentPadding" width="100%">
            <Label text="Name" labelFor="nameInput" />
            <Input id="nameInput" placeholder="Enter Your Name" width="70%" />

            <Label text="Email" labelFor="emailInput" required="true" />
            <Input id="emailInput" type="Email" placeholder="Enter Your Email" width="70%" />

            <Label text="Phone" labelFor="phoneInput" />
            <Input id="phoneInput" type="Tel" placeholder="Enter Your Phone" width="70%"/>

            <Label text="Comment" />
            <TextArea value="Lorem ipsum dolor" growing="true" width="100%" height="200%"/>

        </l:VerticalLayout>
        <l:HorizontalLayout class="sapUiContentPadding">

            <Button text="Submit" press="handleOpenDialog" />
            <Button text="Close" press="handleCloseDialog" />

        </l:HorizontalLayout>

    </Dialog>

</core:FragmentDefinition>

<mvc:View controllerName="pro.proj.controller.blog"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt">
    <Shell id="shell">
        <App id="app">

            <pages>

                <Page id="page" title="Blog Details" showNavButton="true" navButtonPress="goBack" enableScrolling="true" class="sapUiResponsivePadding--header sapUiResponsivePadding--footer">

                    <SearchField width="12rem" liveChange=".onSearch"/>

                    <MessageStrip text="Default (Information) with default icon and close button: BLOGS" showIcon="true" showCloseButton="true" class="sapUiMediumMarginBottom">
                    </MessageStrip>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>

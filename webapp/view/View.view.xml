<mvc:View controllerName="pro.proj.controller.View"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <tnt:ToolHeader>
                        <Button icon="sap-icon://home" type="Transparent">
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button>
                        <IconTabHeader id="iconTabHeader" selectedKey="invalidKey" backgroundDesign="Transparent" mode="Inline">
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" shrinkable="true" />
                            </layoutData>
                            <items>
                                <IconTabFilter text="ABAP Explored" />
                                <IconTabFilter text="Blogs" />
                                <IconTabFilter text="My Work" />
                            </items>
                        </IconTabHeader>
                        <Button icon="sap-icon://search" type="Transparent">
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button>
                        <Button icon="sap-icon://comment" type="Transparent">
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button>
                        <MenuButton icon="sap-icon://hint" type="Transparent">
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                            <Menu>
                                <MenuItem text="Edit" icon="sap-icon://edit" />
                                <MenuItem text="Save" icon="sap-icon://save" />
                            </Menu>
                        </MenuButton>
                    </tnt:ToolHeader>
                    <content>

                        <Button id="BadgedButton" class="sapUiTinyMarginBeginEnd" press="handlePopoverPress" icon="sap-icon://accept" type="Default" text="Netlify"></Button>
                        <Carousel class="sapUiContentPadding" loop="true">
                            <Image src="model/bau.png" class="sapUiLargeMarginTop sapUiLargeMarginBottom" alt="Example picture of spotlight" />
                            <Image src="https://images.freeimages.com/images/large-previews/3d7/road-sign-1144301.jpg" class="sapUiLargeMarginTop sapUiLargeMarginBottom" alt="Example picture of USB flash drive" />
                            <Image src="https://images.freeimages.com/images/large-previews/97c/bus-1144059.jpg" class="sapUiLargeMarginTop sapUiLargeMarginBottom" alt="Example picture of spotlight" />
                        </Carousel>

                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="employeeQuickView" text="Contact" press=".handleQuickViewPress" />
                            <ToolbarSpacer/>
                        </OverflowToolbar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
